<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
          
<bean class="in.sp.beans.Address" id="addrId">
	
	<property name="houseno" value="870"/>
	<property name="city" value="Hisar"/>
	<property name="pincode" value="125051"/>
	
</bean>

    <bean class="in.sp.beans.Student" id="stdId">
		<property name="rollno" value="101"/>
		<property name="name" value="Ajay Lohan"/>
		<property name="address" ref="addrId"/>
	</bean>
    

</beans>